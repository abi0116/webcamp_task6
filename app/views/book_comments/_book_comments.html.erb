<div class="comments">
  <% book.book_comments.each do |book_comment| %>
    <%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100,format: "jpeg", fallback: "no-image-icon.jpg",size: "50x50" %>
    <%= book_comment.comment %>
    <% if current_user == book_comment.user %>
      <%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment),method: :delete,class: "btn btn-danger",remote: true %>
    <% end %>
    <br>
    <%= book.user.name %>
    <br>
  <% end %>
</div>
<div class = "form-group">
  <%= form_with(model:[book,@book_comment]) do |f| %>
    <%= f.text_area :comment,rows:"5",placeholder:"コメントをここに",class: "form-control" %>
    <%= f.submit "送信" %>
  <% end %>
</div>